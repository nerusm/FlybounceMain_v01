<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/ic_person_black_24dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/member_name_item"
        android:layout_width="260dp"
        android:layout_height="34dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:paddingTop="10dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textSize="16dip"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        tools:layout_editor_absoluteY="8dp" />
    <View
        android:layout_width="260dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_memberDuration"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/member_name_item"
        android:id="@+id/view3"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/textView_memberPlan"
        android:layout_width="117dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:text="WEEKDAYS"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dip"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/view3"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/textView_memberDuration"
        android:layout_width="137dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:text="Monthly"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dip"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView_memberPlan"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/member_name_item" />

    <TextView
        android:id="@+id/textView_RenewalDate"
        android:layout_width="194dp"
        android:layout_height="0dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="4dp"
        android:text="Renewal Date: "
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</android.support.constraint.ConstraintLayout>